<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fynzero.moviecenter">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.TrailerTvActivity"
            android:parentActivityName=".ui.MainActivity"/>
        <activity android:name=".ui.TrailerActivity"
            android:parentActivityName=".ui.MainActivity"/>
        <activity
            android:name=".ui.AboutActivity"
            android:parentActivityName=".ui.MainActivity" />
        <activity
            android:name=".ui.SearchListActivity"
            android:label="search result"
            android:parentActivityName=".ui.MainActivity" />
        <activity android:name=".ui.MainActivity" />
        <activity android:name=".ui.DetailTvRecommendActivity" />
        <activity android:name=".ui.DetailRecommendationActivity" />
        <activity android:name=".ui.DetailTvActivity" />
        <activity android:name=".ui.DetailMovieActivity" />
        <activity android:name=".ui.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>